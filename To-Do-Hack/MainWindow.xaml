        <Label Content="Записи: " Foreground="White" Grid.Row="4" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
        
        <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="17" Grid.RowSpan="25" Background="Transparent" BorderBrush="BlueViolet" BorderThickness="1" CornerRadius="10"/>
       
        
